[Unit]
Description=xivo-dird server
ConditionPathExists=!/var/lib/xivo/disabled
After=network.target postgresql.service xivo-confgend.service
Wants=postgresql.service xivo-confgend.service

[Service]
Type=forking
ExecStartPre=/usr/bin/install -d -o www-data -g www-data /var/run/xivo-dird
ExecStart=/usr/bin/xivo-dird --user www-data
PIDFile=/var/run/xivo-dird/xivo-dird.pid

[Install]
WantedBy=multi-user.target
