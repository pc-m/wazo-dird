{
    "swagger": "2.0",
    "info": {
        "title": "XiVO Dird",
        "description": " Contacts and directories in XiVO are managed by the xivo-dird daemon. This service provides a public API that can be used to query the directories that are configured on a XiVO. \n\n\nA contact can contain various information such as a person's phone number, number, office number, department, office number, etc. The information displayed is selected via a profile. Directories can be aggregated using multiple data sources such as an LDAP server, a CSV file, another XiVO server, etc.\n\n\nPlease refer to [the documentation](http://documentation.xivo.io) for further details.\n\n\nNote: The 0.1 API is currently in development. Major changes could still happen and new resources will be added over time.",
        "version": "0.1",
        "license": {
            "name": "GPL v3",
            "url": "http://www.gnu.org/licenses/gpl.txt"
        },
        "contact": {
            "name": "Dev Team",
            "url": "http://xivo.io",
            "email": "dev@avencall.com"
        }
    },
    "x-xivo-port": 9489,
    "x-xivo-name": "dird",
    "schemes": [
        "https"
    ],
    "basePath": "/0.1",
    "consumes": [
        "application/json"
    ],
    "produces": [
        "application/json"
    ],
    "paths": {
        "/directories/lookup/{profile}": {
            "get": {
                "summary": "Search for contacts",
                "description": " The `lookup` query will return a list of result matching the searched term. The result will be retrieved from all configured directories for the given profile.\n\n\nThis route is provided by the `default_json_view` plugin using the `lookup` plugin and all configured sources for the given profile.",
                "operationId": "lookup",
                "tags": [
                    "lookup"
                ],
                "responses": {
                    "200": {
                        "description": "A list of contacts",
                        "schema": {
                            "$ref": "#/definitions/Lookup"
                        }
                    },
                    "404": {
                        "description": "The lookup profile does not exist",
                        "schema": {
                            "$ref": "#/definitions/Error"
                        }
                    },
                    "503": {
                        "description": "The authentication server is unreachable.",
                        "schema": {
                            "$ref": "#/definitions/Error"
                        }
                    }
                },
                "parameters": [
                    {
                        "name": "profile",
                        "in": "path",
                        "type": "string",
                        "description": "The profile defines the list of directories to query and how the results are displayed",
                        "required": true
                    },
                    {
                        "name": "term",
                        "in": "query",
                        "type": "string",
                        "description": "A search term to look for",
                        "required": true
                    },
                    {
                        "name": "X-Auth-Token",
                        "in": "header",
                        "type": "string",
                        "required": true,
                        "description": "Authentication token obtained from xivo-auth."
                    }
                ]
            }
        },
        "/directories/lookup/{profile}/headers": {
            "get": {
                "summary": "Lookup headers",
                "description": "Column headers that can be used when displaying lookup results to the client",
                "operationId": "get_headers",
                "tags": [
                    "headers"
                ],
                "responses": {
                    "200": {
                        "description": "A list of headers",
                        "schema": {
                            "$ref": "#/definitions/Header"
                        }
                    },
                    "404": {
                        "description": "Invalid profile",
                        "schema": {
                            "$ref": "#/definitions/Error"
                        }
                    },
                    "503": {
                        "description": "The authentication server is unreachable.",
                        "schema": {
                            "$ref": "#/definitions/Error"
                        }
                    }
                },
                "parameters": [
                    {
                        "name": "profile",
                        "in": "path",
                        "type": "string",
                        "description": "The profile defines the list of directories to query and how the results are displayed",
                        "required": true
                    },
                    {
                        "name": "X-Auth-Token",
                        "in": "header",
                        "type": "string",
                        "required": true,
                        "description": "Authentication token obtained from xivo-auth."
                    }
                ]
            }
        },
        "/directories/favorites/{profile}": {
            "get": {
                "summary": "List favorite contacts",
                "description": "Get the list of favorite contacts for directories configured in the profile",
                "operationId": "list_favorites",
                "tags": [
                    "favorites"
                ],
                "responses": {
                    "200": {
                        "description": "A list of contacts",
                        "schema": {
                            "$ref": "#/definitions/ContactList"
                        }
                    },
                    "404": {
                        "description": "Invalid profile",
                        "schema": {
                            "$ref": "#/definitions/Error"
                        }
                    },
                    "503": {
                        "description": "The authentication server is unreachable.",
                        "schema": {
                            "$ref": "#/definitions/Error"
                        }
                    }
                },
                "parameters": [
                    {
                        "name": "profile",
                        "in": "path",
                        "type": "string",
                        "description": "The profile defines the list of directories to query and how the results are displayed",
                        "required": true
                    },
                    {
                        "name": "X-Auth-Token",
                        "in": "header",
                        "type": "string",
                        "required": true,
                        "description": "Authentication token obtained from xivo-auth."
                    }
                ]
            }
        },
        "/directories/favorites/{directory}/{contact}": {
            "put": {
                "summary": "Mark a contact as favorite",
                "description": "Add the contact from {directory} to the list of favorite contacts.",
                "operationId": "add_favorite",
                "tags": [
                    "favorites"
                ],
                "responses": {
                    "204": {
                        "description": "Favorite added."
                    },
                    "503": {
                        "description": "The authentication server is unreachable.",
                        "schema": {
                            "$ref": "#/definitions/Error"
                        }
                    }
                },
                "parameters": [
                    {
                        "name": "directory",
                        "in": "path",
                        "type": "string",
                        "description": "The directory where the contact is stored.",
                        "required": true
                    },
                    {
                        "name": "contact",
                        "in": "path",
                        "type": "string",
                        "description": "The ID of the contact. This ID is unique within the {directory}.",
                        "required": true
                    },
                    {
                        "name": "X-Auth-Token",
                        "in": "header",
                        "type": "string",
                        "required": true,
                        "description": "Authentication token obtained from xivo-auth."
                    }
                ]
            },
            "delete": {
                "summary": "Unmark a contact as favorite",
                "description": "Remove the contact from {directory} from the list of favorite contacts.",
                "operationId": "remove_favorite",
                "tags": [
                    "favorites"
                ],
                "responses": {
                    "204": {
                        "description": "Favorite removed."
                    },
                    "404": {
                        "description": "Favorite does not exist",
                        "schema": {
                            "$ref": "#/definitions/Error"
                        }
                    },
                    "503": {
                        "description": "The authentication server is unreachable.",
                        "schema": {
                            "$ref": "#/definitions/Error"
                        }
                    }
                },
                "parameters": [
                    {
                        "name": "directory",
                        "in": "path",
                        "type": "string",
                        "description": "The directory where the contact is stored.",
                        "required": true
                    },
                    {
                        "name": "contact",
                        "in": "path",
                        "type": "string",
                        "description": "The ID of the contact. This ID is unique within the {directory}.",
                        "required": true
                    },
                    {
                        "name": "X-Auth-Token",
                        "in": "header",
                        "type": "string",
                        "required": true,
                        "description": "Authentication token obtained from xivo-auth."
                    }
                ]
            }
        }
    },
    "definitions": {
        "Error": {
            "title": "Error",
            "description": "Error message for the client",
            "properties": {
                "timestamp": {
                    "description": "Time at which the error occured",
                    "type": "array",
                    "items": {
                        "type": "number",
                        "format": "timestamp"
                    }
                },
                "reason": {
                    "description": "Human readable explanation of the error",
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "status_code": {
                    "description": "HTTP status code",
                    "type": "integer"
                }
            }
        },
        "Header": {
            "properties": {
                "column_headers": {
                    "type": "array",
                    "description": "Labels for the headers",
                    "items": {
                        "type": "string"
                    }
                },
                "column_types": {
                    "type": "array",
                    "description": "Data types for the headers",
                    "items": {
                        "type": "string"
                    }
                }
            }
        },
        "Lookup": {
            "properties": {
                "column_headers": {
                    "type": "array",
                    "description": "Labels for the headers",
                    "items": {
                        "type": "string"
                    }
                },
                "column_types": {
                    "type": "array",
                    "description": "Data types for the headers",
                    "items": {
                        "type": "string"
                    }
                },
                "results": {
                    "items": {
                        "$ref": "#/definitions/Contact"
                    },
                    "type": "array",
                    "description": "List of results"
                },
                "term": {
                    "type": "string",
                    "description": "Search term used for these results"
                }
            }
        },
        "ContactList": {
            "properties": {
                "results": {
                    "items": {
                        "$ref": "#/definitions/Contact"
                    },
                    "type": "array",
                    "description": "List of results"
                }
            }
        },
        "Contact": {
            "properties": {
                "column_values": {
                    "items": {
                        "type": "string"
                    },
                    "type": "array"
                },
                "relations": {
                    "$ref": "#/definitions/Relation"
                },
                "source": {
                    "type": "string"
                }
            }
        },
        "Relation": {
            "properties": {
                "xivo_id": {
                    "type": "string"
                },
                "user_id": {
                    "type": "string"
                },
                "endpoint_id": {
                    "type": "string"
                },
                "agent_id": {
                    "type": "string"
                }
            }
        }
    }
}
