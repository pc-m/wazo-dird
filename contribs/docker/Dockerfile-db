FROM wazopbx/wazo-base-db
MAINTAINER Wazo Maintainers <dev@wazo.community>

ADD . /usr/src/xivo-dird
WORKDIR /usr/src/xivo-dird

RUN true \
    && pg_start \
    && bin/xivo-dird-init-db --user postgres \
    && (cd /usr/src/xivo-dird && alembic -c alembic.ini upgrade head) \
    && pg_stop \
    && true
USER postgres